Proceso perimetro__Rectangulo
	Definir base, altura, resultado Como Real;
	
	Escribir "Ingrese la base del rectangulo: ";
	Leer base;
	
	Escribir "Ingrese la altura del rectangulo: ";
	Leer altura;
	
	resultado <- (2*base)+(2*altura);
	
	Escribir "El resultado del perimetro del rectangulo es: ",resultado;
	
FinProceso
