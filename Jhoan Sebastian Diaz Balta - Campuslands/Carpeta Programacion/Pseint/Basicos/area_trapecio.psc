Proceso calcular_areaTrapecio
	Definir base1, base2, altura, resultado Como Real;
	
	Escribir "Ingrese la primera base del trapecio: ";
	Leer base1;
	
	Escribir "Ingrese la segunda base del trapecio: ";
	Leer base2;
	
	Escribir "Ingrese la altura del trapecio: ";
	Leer altura;
	
	resultado <- ((base1+base2)*altura)/2;
	
	Escribir "El area del trapecio es: ", resultado;
	
FinProceso
