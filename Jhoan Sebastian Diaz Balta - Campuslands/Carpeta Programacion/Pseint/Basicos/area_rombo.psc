Proceso area_rombo
	Definir diagonal1, diagonal2, resultado Como Real;
	
	Escribir "Ingrese la primera diagonal del rombo: ";
	Leer diagonal1;
	
	Escribir "Ingrese la segunda diagonal del rombo: ";
	Leer diagonal2;
	
	resultado <- (diagonal1 + diagonal2)/2;
	
	Escribir "El resultado del area del rombo es: ", resultado;
	
FinProceso
